{
  "ts-node": {
    "files": true
  },
  "files": ["src/global.d.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["es2022"],
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "scripts", "migrations"]
}
